<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.filterfragment.FilterFragment">

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center"
        android:text="@string/tv_main"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/btn_filter_result"
        android:id="@+id/et_filter"
        android:fontFamily="@font/barlow_medium"
        android:hint="@string/tv_example"
        android:padding="13dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main" />
    <Button
        android:fontFamily="@font/barlow_medium"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:text="Search"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_btb"
        android:id="@+id/btn_filter_result"
        app:layout_constraintTop_toTopOf="@id/et_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/et_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/et_filter"/>


</androidx.constraintlayout.widget.ConstraintLayout>